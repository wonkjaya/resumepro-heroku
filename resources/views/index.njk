<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ResumePro</title>

    <!-- Bootstrap Core CSS -->
    <link rel="icon" href="{{site_url}}logo.png" sizes="16x16" type="image/png">
    <link href="{{site_url}}assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{site_url}}assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

    <!-- Plugin CSS -->
    <link href="{{site_url}}assets/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="{{site_url}}assets/css/creative.css" rel="stylesheet">
    <link href="{{site_url}}style.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top">

    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">RESUME<span class="blue">PRO</span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                {% asyncAll m in menu%}
                    <li>
                        <a class="page-scroll {{m.custom_class}}" href="{{m.url}}">{{lang(m.label)}}</a>
                    </li>
                {% endall %}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">{{lang('index.scroll1.h1')}}</h1>
                <hr>
                <p>{{lang('index.scroll1.description')}}</p>
                <a href="#about" class="btn btn-primary btn-xl page-scroll">{{lang('index.scroll1.register')}}</a>
            </div>
        </div>
    </header>

    <section class="bg-primary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">{{lang('index.scroll2.h1')}}</h2>
                    <hr class="light">
                    <p class="text-faded">{{lang('index.scroll2.description')}}</p>
                    <a href="#services" class="page-scroll btn btn-default btn-xl sr-button">{{lang('index.scroll2.getstarted')}}</a>
                </div>
            </div>
        </div>
    </section>

    <section id="invite-friends">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{lang('index.scroll3.h1')}}</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p class="text-muted">{{lang('index.scroll3.description')}}</p>
                </div>
                <form class="form-inline">
                    <div class="col-lg-9 col-sm-10 col-xs-7 col-lg-offset-1 text-right">
                        <input type="email" class="form-control input-lg" id="" placeholder="yourfriend@example.com" required="true" style="width:100%">
                    </div>
                    <div class="col-lg-2 col-sm-2 col-xs-5">
                          <button type="submit" class="btn btn-primary btn-lg">{{lang('index.scroll3.send_invitation')}}</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="no-padding" id="templates">
        <div class="container-fluid">
            <div class="row no-gutter popup-gallery">
                {% asyncAll itm in templates %}
                <div class="col-lg-4 col-sm-6">
                    <a href="{{itm.link}}" class="portfolio-box">
                        <img src="{{site_url}}uploads/templates/{{itm.image}}" class="img-responsive" alt="resumepro:{{itm.image}}">
                        <div class="portfolio-box-caption">
                            <div class="portfolio-box-caption-content">
                                <div class="project-category text-faded">
                                    Template Name
                                </div>
                                <div class="project-name">
                                    {{ itm.name }}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {% endall %}
            </div>
        </div>
    </section>

    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <a href="http://startbootstrap.com/template-overviews/creative/" class="btn btn-default btn-xl sr-button">{{lang('index.scroll4.more')}}</a>
            </div>
        </div>
    </aside>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">{{lang('index.scroll5.h1')}}</h2>
                    <hr class="primary">
                    <p>{{lang('index.scroll5.description')}}</p>
                </div>
                <div class="col-lg-4 col-lg-offset-2 text-center">
                    <i class="fa fa-phone fa-3x sr-contact"></i>
                    <p>{{lang('index.scroll5.phonenumber')}}</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                    <p><a href="mailto:your-email@your-domain.com">{{lang('index.scroll5.emailinfo')}}</a></p>
                </div>
            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="{{site_url}}assets/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{site_url}}assets/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="{{site_url}}assets/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="{{site_url}}assets/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="{{site_url}}assets/js/creative.min.js"></script>

</body>

</html>
